<%= form_for(submission, html: { class: "form" }) do |f| %>
  <h1 class="form-header">Apply for Rails Girls workshop</h1>
  <% if submission.errors.any? %>
    <div class="form-error-box">
      <h2 class="form-error-header"><%= pluralize(submission.errors.count, "field") %> need to be corrected</h2>

      <ul class="form-error-list">
      <% submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div class="form-field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <fieldset class="form-field form-field-collection">
    <legend>What is your English level?</legend>
    <div>
      <%= f.radio_button :english, :none %>
      <%= f.label :english, "I don't speak English", value: "none" %>
    </div>
    <div>
      <%= f.radio_button :english, :basic %>
      <%= f.label :english, "Basic", value: "basic" %>
    </div>
    <div>
      <%= f.radio_button :english, :fluent %>
      <%= f.label :english, "Fluent", value: "fluent" %>
    </div>
  </fieldset>

  <div class="form-field">
    <%= f.submit "Apply for workshop", class: "btn-small" %>
  </div>
<% end %>
